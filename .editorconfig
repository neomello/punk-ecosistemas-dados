# ══════════════════════════════════════════════════════════════════════════════
# PUNK ECOSISTEMAS - EDITOR CONFIG
# ══════════════════════════════════════════════════════════════════════════════
# Configuração consistente entre editores/IDEs
# https://editorconfig.org
# ══════════════════════════════════════════════════════════════════════════════

root = true

# ─────────────────────────────────────────────────────────────────────────────
# DEFAULT
# ─────────────────────────────────────────────────────────────────────────────
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# ─────────────────────────────────────────────────────────────────────────────
# JAVA
# ─────────────────────────────────────────────────────────────────────────────
[*.java]
indent_size = 4

# ─────────────────────────────────────────────────────────────────────────────
# YAML / JSON
# ─────────────────────────────────────────────────────────────────────────────
[*.{yml,yaml,json}]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────
# MARKDOWN
# ─────────────────────────────────────────────────────────────────────────────
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────
# MAKEFILE
# ─────────────────────────────────────────────────────────────────────────────
[Makefile]
indent_style = tab

# ─────────────────────────────────────────────────────────────────────────────
# SCRIPTS
# ─────────────────────────────────────────────────────────────────────────────
[*.sh]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────
# WEB
# ─────────────────────────────────────────────────────────────────────────────
[*.{js,ts,jsx,tsx,css,scss,html}]
indent_size = 2

